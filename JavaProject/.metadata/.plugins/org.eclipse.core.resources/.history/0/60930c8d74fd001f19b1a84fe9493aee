package day0310;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Container;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class SwingEx00 extends JFrame implements ActionListener {

	JButton  [] btn=new JButton[7];
	String [] btnLabel= {"핑크","초록","파랑","노랑","빨강","주황","검정"};
	Color [] btnColor= {Color.pink,Color.green,Color.blue,Color.yellow,Color.red,Color.orange,Color.black};
	
	Container cp;
	
	public SwingEx00(String title) {
		super(title); 
		this.setBounds(500, 200, 500, 700);
		
		cp=this.getContentPane();
		cp.setBackground(Color.lightGray);
		
		initDesign();
		
		this.setForeground(Color.CYAN);
		
		
		this.setVisible(true);
	}
	
	public void initDesign() {
		
		JPanel panel=new JPanel();
		panel.setBackground(Color.white);
		this.add(panel,BorderLayout.NORTH);
		
		for(int i=0;i<btn.length;i++)
		{
			btn[i]=new JButton(btnLabel[i]);
			btn[i].setBackground(btnColor[i]);
			
			panel.add(btn[i]);
		}
			
		
		
		
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		
		Object ob = e.getSource();
		for(int i=0;i<btn.length;i++)
		{
			if(ob==btn[i])
				cp.setBackground(btnColor[i]);
			
			//창 제목
			this.setTitle("Color: "+btnColor);
		}
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		new SwingEx00("안녕 자바");
	}

	

}
