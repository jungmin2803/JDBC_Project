package day0221;

import java.util.Scanner;

public class WhileScanSumAvg_10 {

	public static void main(String[] args) {
		/*
		 * 점수(1~100)입력받다가 0입력시 빠져나온후 총갯수와 총점 평균 구하기
		 * 
		 * ex)
		 * 77
		 * 88
		 * -10
		 * 	다시입력바람
		 * 99
		 * 110
		 * 	다시입력바람
		 * 
		 * ===============
		 * 총갯수: 3
		 * 총점:**
		 * 평균:**,**
		 */
		Scanner sc=new Scanner(System.in);
		
		int score;
		int tot=0;
		int cnt=0;		
		double avg;
		
		while(true) {
			System.out.println("점수를 입력하세요");
			score=sc.nextInt();
			if(score<1||score>100) {
				System.out.println("다시입력바람");
				cnt--;
				continue;
			}
				
			
			if(score==0) {
				System.out.println("===========");
				break;
			}
				tot+=score;
				cnt++;
		} avg=(double)tot/cnt;
		System.out.println("총갯수: "+cnt);
		System.out.println("총점:"+tot);
		System.out.printf("평균: %.2f",avg);
			
		

	}

}
