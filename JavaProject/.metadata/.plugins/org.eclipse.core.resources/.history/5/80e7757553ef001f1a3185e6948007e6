package day0220;

public class ForSum_12 {

	public static void main(String[] args) {
		// 1~10까지의 반복문으로 합 구하기
		
		
		int sum=0;		
		for(int i=1;i<=10;i++) 
		{			
			sum+=i;//sum=sum+i
		} 
		 System.out.printf("1~10까지의 합은"+sum+"입니다");
		 System.out.println();
		
		 
		 //while문 으로 합 구하기
		 int tot=0;//합해야 되는 초기값은 무조건 0이여야한다
		 int i=1;
		 while(i<=10) {
			 //합계변수에 i를 누적시킨다
			 tot+=i;
			 i++;
		 }
		System.out.println("1~10까지의 합은"+tot+"입니다");
		
	}

}
