package day0221;

import java.util.Scanner;

public class Test_00 {

	public static void main(String[] args) {
		// 랜덤 메뉴 가챠
		
		Scanner sc=new Scanner(System.in);
		int rnd=(int)(Math.random()*10)+1;
		int su;
		while(true) {
			System.out.println("게임을 시작하겠습니까?");
			su=sc.nextInt();
			if(su==rnd) {
				System.out.println(" ");
			}
			
		}
		
	}

}
