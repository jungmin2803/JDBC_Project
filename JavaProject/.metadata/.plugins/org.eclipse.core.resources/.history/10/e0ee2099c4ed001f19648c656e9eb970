package day0218;

import java.util.Calendar;

public class QuizArgs_11 {

	public static void main(String[] args) {
		// 매개변수를 이용하여(args) 다음과 같이 출력하시오(sangName,price,amount,totPrice)
		/*
		 * 상품명 : 갤럭시 폴드
		 * 수량 : 6개
		 * 가격 : 1,200,000원
		 * 총금액 : 7,200,000원
		 */
		
		Calendar cal=Calendar.getInstance();
		
		String sangName = args[0];
		String price = args[1];
		String amount = args[2];

		int pri=Integer.parseInt(price);
		int amo=Integer.parseInt(amount);
		int totprice= (pri*amo);
		
	
				
		
		System.out.println("상품명 : "+args[0]);
		System.out.println("수량 : "+pri+"개");
		System.out.println("가격 : "+amo+"원");
		System.out.println("총금액 : "+totprice+"원");
		

		
		
	}

}
