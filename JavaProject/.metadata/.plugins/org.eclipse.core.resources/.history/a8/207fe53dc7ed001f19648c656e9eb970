package day0218;

import java.util.Calendar;

public class QuizArgs_11 {

	public static void main(String[] args) {
		// 매개변수를 이용하여(args) 다음과 같이 출력하시오(sangName,price,amount,totPrice)
		/*
		 * 상품명 : 갤럭시 폴드
		 * 수량 : 6개
		 * 가격 : 1200000원
		 * 총금액 : 7200000원
		 */
		
		//변수선언
		
		String sangName=args[0];
		int amount=Integer.parseInt(args[1]);
		int price=Integer.parseInt(args[2]);
		
		
		int totprice=price*amount;
		
		System.out.printf("상품명 : %d\n수량 : %d개\n가격 : %f원\n총금액 : %d원",sangName,price,amount,totprice);
		

		

		
		
	}

}
