package day0310;

import java.awt.Color;
import java.awt.Container;
import java.awt.FlowLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JOptionPane;

public class SwingLayoutButtonEvent03 extends JFrame implements ActionListener{
	
	Container cp;
	JButton btn1;
	JButton btn2;
	JButton btn3;
	
	//생성자
	public SwingLayoutButtonEvent03(String title) {
		super(title); //JFrame부모생성자를 통해서 창제목을 통해서 제목을 입력
		
		//위치,너비
		this.setBounds(1000, 100, 500, 600);//창 위치,크기
		
		
		cp=this.getContentPane();
		cp.setBackground(new Color(127,255,212));
		
		setDegign();
		
		
		this.setVisible(true);		
	}
	
	//디자인
	public void setDegign()
	{
		//레이아웃 변경
		this.setLayout(new FlowLayout());
		//버튼생성
		btn1=new JButton("버튼 #1");
		btn2=new JButton("버튼 #2");
		btn3=new JButton("버튼 #3");
		
		this.add(btn1);
		this.add(btn2);
		this.add(btn3);
		
		//tortkd
		btn1.setBackground(Color.blue);
		btn2.setBackground(Color.cyan);
		btn3.setBackground(Color.green);
		
		btn1.setForeground(Color.white); //setForeground 글자색
	}
	
	//이벤트
	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		//메세지를 클릭시 다이얼로그 형태로 보여준다
		JOptionPane.showConfirmDialog(this, "버튼클릭");
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		new SwingLayoutButtonEvent03("스윙 레이아웃 #3");
	}

	

}
