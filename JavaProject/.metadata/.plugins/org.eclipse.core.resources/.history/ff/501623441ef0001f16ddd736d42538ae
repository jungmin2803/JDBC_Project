package day0220;

public class SubStringTest_06 {

	public static void main(String[] args) {
		// String index
		
		String str="나는 지금 쌍용교육센터에서 자바를 공부하고 있어요";
		//charAt, substring (글자수에 띄어쓰기도 포함된다)
		
		char ch=str.charAt(6); // charAt :한글자만 가져올수있다
		String word1=str.substring(6); // substring(int deginindex) : 지정한 위치부터 글자를 가져올수 있다
		String word2=str.substring(6, 12); //substring(int deginindex, int endindex) 지정한 두 위치 사이의 글자만 가져올수있다
		
		System.out.println(ch); //쌍
		System.out.println(word1); //쌍용교육센터에서 자바를 공부하고 있어요
		System.out.println(word2); //쌍용교육센터
		int i=str.length();// 글자갯수
		System.out.println("총글자갯수:"+i); // 총글자갯수:27
	
		
	}

}
