package day0226;

import java.util.Scanner;

public class BinngoGame_07 {

	public static void main(String[] args) {
		// 반복문 안에서 엔터를 누르면 다음 난수가 나오도록 합니다(종료:Q or q)
		/*
		 *  3행3열의 다차원 배열을 생성후 1~3사이의 난수를 발생
		 *  각각의 가로, 각각의 세로,대각선을 비교해서 같은값이 나오면 빙고:2개
		 *  없으면 꽝!!!
		 */
		
		Scanner sc=new Scanner(System.in);
		
		String game;
		int [][] puzzle=new int[3][3];
		int binngo;
		
		
		while(true)
		{	
			//3행3열의 난수 발생
			for(int i=0;i<puzzle.length;i++) 
			{
				for(int j=0;j<puzzle[i].length;j++)
				{
					puzzle[i][j]=(int)(Math.random()*3)+1;	//1~3
				}
			}
			for(int i=0;i<puzzle.length;i++)
			{
				for(int j=0;j<puzzle[i].length;j++)
				{
					System.out.printf("%d\t",puzzle[i][j]);
				}
				System.out.println();
			}
			
			System.out.println("엔터를 누르면 게임이 시작됩니다");
			game=sc.nextLine();
			if(game.equalsIgnoreCase("Q"))
			{
				System.out.println("게임이 종료되었습니다");
				break;
			}
		}

	}

}
